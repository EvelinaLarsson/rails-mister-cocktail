<div class="banner cocktail-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo, crop: :fill %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container my-3">
  <div class="ingredients">
    <h3>Ingredients</h3>
    <ul>
      <% @dose.each do |dose| %>
        <li> <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to(dose_path(dose), method: :delete) do %>
            <i class="far fa-trash-alt"> </i>
        <% end %>
      <% end %>
    </ul>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-warning" %>
  </div>
  <div class="instructions">
    <h3>Instructions</h3>
    <p>
      <%= @cocktail.instruction %>
    </p>
  <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-warning" %>
  </div>
</div>

