<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-1.2.1&auto=format&fit=crop&w=2171&q=80);">
  <div class="container">
    <h1>My cocktails</h1>
  </div>
</div>

<div class="container my-4">
  <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-warning" %>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, width: 300, height: 200, crop: :fill %>);">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>

